    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io.connect();

        socket.on('identifiant', function(data) {
            document.querySelector('.nom-prenom').innerHTML = data.pseudo;

            //A effacer après
            console.log('identifiant')
            console.log(data)
        });

        let row = document.querySelector('.main-content');

        socket.once('information_recu', function(data) {
            let chaine;
            data.forEach(element => {
                chaine = '<div class="card"><div class="card-header">Code de l\'information:  ' + element.codeInfo + '</div><div class="card-body"><h5 class="card-title">Information ' + element.idInfo + '</h5><p class="card-text">' + element.description + '</p><label class="btn btn-primary">Auteur: ' + element.pseudo + '</label><span class="btn btn-light">Date de publication: ' + element.datePublication + ' </span></div></div> <br><br>';
                row.insertAdjacentHTML('afterend', chaine);
            });

            //A effacer après
            console.log('information_recu')
            console.log(data)
        });
    </script>

