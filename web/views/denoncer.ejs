</head>

<body>

    <div class="body">
        <!-- Navigation bar -->
        <nav>
            <div class="nav-left">
                <a href="/home"><img src="/images/logo.png" alt="ZECO APP" class="logo"></a>
                <!-- <ul>
                    <li> <a href="/home/denoncer/preview"><i class="fas fa-eye" title="Prévisualisation"></i></a> </li>
                    <li> <i class="fa fa-download" aria-hidden="true" title="Télécharger la Preuves"></i></li>
                </ul> -->

            </div>

            <div class="nav-right">
                <div class="nav-user">
                    <a href="" class="btn dropdown-toggle" data-bs-toggle="dropdown"> <img src="/images/user-logo.jpg" alt=""><span class="nom-prenom"></span>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/profil">Mon profil</a></li>
                            <li><a class="dropdown-item" href="/notifications">Mes notifications</a></li>
                            <hr>
                            <li><a class="dropdown-item" href="/disconnect">Déconnexion</i></a></li>
                        </ul>
                </div>
            </div>
        </nav>

        <div class="body-content">
            <div class="main-content">

                <div class="droite">

                </div>
                <div class="gauche">
                    <form enctype="multipart/form-data" id="myForm" name="myForm" action="/home/denoncer" method="POST">
                        <div class="card">
                            <div class="card-body">
                                <div class="acteurs">
                                    <h4>Acteurs</h4>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Groupe, Organisation, Entité morale (personne)" aria-label="Actor" aria-describedby="basic-addon1" name="organisme" id="organisme">
                                    </div>
                                </div>

                            </div>
                        </div>
                        <br>

                        <div class="card">
                            <div class="card-body">

                                <div class="context">
                                    <h4>Contexte</h4>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Pays du crime" aria-label="Pays" aria-describedby="basic-addon2" name="pays">
                                    </div>

                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Lieu du crime" aria-label="Lieu" aria-describedby="basic-addon3" name="lieu">
                                    </div>

                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Entreprise concernée" aria-label="entreprise" aria-describedby="basic-addon4" name="entreprise">
                                    </div>

                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Service" aria-label="service" aria-describedby="basic-addon4" name="service">
                                    </div>

                                    <div class="input-group mb-3">
                                        <select class="form-select" name="statut">
                                            <option value="vecu">Je l'ai vécu</option>
                                            <option value="temoin">Je suis un témoin</option>
                                          </select>
                                    </div>

                                    <div class="input-group mb-3">
                                        <input type="date" class="form-control" placeholder="Date des faits" name="date">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <br>
                        <div class="card">
                            <div class="card-body">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Objet" name="objet">
                                </div>

                                <div class="context">
                                    <h4>Description</h4>
                                    <div class="input-group">
                                        <textarea class="form-control" aria-label="With textarea" id="texte" placeholder="Décrivez les faits" name="description"></textarea>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <br>
                        <div class="card">
                            <div class="card-body">

                                <div class="context">
                                    <h4>Preuves</h4>
                                    <div class="input-group mb-3">
                                        <input type="file" class="form-control" id="fichiers" name="file" onchange="fullTable()" multiple>
                                    </div>
                                    <div class="tableau">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Fichiers sélectionnés</th>
                                                    <th>Tailles</th>
                                                </tr>
                                            </thead>
                                            <tbody id="table-row">

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <br>
                        <div class="card">
                            <div class="card-body">

                                <div class="context">
                                    <h4>Surveillance</h4>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="flexRadioDefault1" name="surveillance">
                                        <label class="form-check-label" for="flexRadioDefault1">
                                      Je veux suivre ma plainte
                                    </label>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <br>
                        <button type="submit" class="form-control btn-primary" id="submit"> Sauvegarder la plainte et charger les preuve</button>
                    </form>
                </div>

            </div>
        </div>

    </div>

    <script src="/socket.io/socket.io.js" type="text/javascript"></script>
    <script>
        let socket = io.connect();

        socket.on('identifiant', function(data) {
            if (data.pseudo === undefined) {
                window.location.href = "/";
            } else {
                document.querySelector('.nom-prenom').innerHTML = data.pseudo;
            }
        });

        // socket.on('plainte', function(data) { // On recoit les données de la plaintes
        //     console.log(data)
        // });
    </script>

    <script>
        function fullTable() {
            let files = document.getElementById('fichiers').files;
            let row = document.getElementById('table-row');

            let chaine;
            for (let i = 0; i < files.length; i++) {
                chaine = "<tr><td>" + files[i]['name'] + "</td><td>" + (files[i]['size'] / 1000) + "Ko</td></tr>"
                row.insertAdjacentHTML('afterend', chaine);
            }
        }
    </script>


</body>

